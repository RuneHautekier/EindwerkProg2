<Window x:Class="FitnessWPF.WindowSearchMember"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessWPF"
        mc:Ignorable="d"
        Title="WindowSearchMember" Height="350" Width="450">
    <Grid>
        <Label x:Name="lblHeader" HorizontalAlignment="Center" Height="40" Margin="0,10,0,0" Content="On this page you can lookup a member!" VerticalAlignment="Top" Width="380" FontSize="20" FontWeight="Bold"/>

        <Label x:Name="lblNameMember" HorizontalAlignment="Left" Height="28" Margin="135,47,0,0" Content="Give the name of the member:" VerticalAlignment="Top" Width="180" BorderBrush="{x:Null}"/>
        <TextBox x:Name="txtNameMember" HorizontalAlignment="Left" Height="23" Margin="125,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>

        <Label x:Name="lblIdMember" HorizontalAlignment="Left" Height="28" Margin="64,75,0,0" Content="Geef de id van de klant die je wilt opzoeken:" VerticalAlignment="Top" Width="274" BorderBrush="{x:Null}" Visibility="Hidden"/>
        <TextBox x:Name="txtBoxIdMember" HorizontalAlignment="Left" Height="23" Margin="332,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238" Visibility="Hidden"/>

        <Button x:Name="buttonSearch" Content="Search" HorizontalAlignment="Left" Height="23" Margin="188,116,0,0" VerticalAlignment="Top" Width="70" Click="buttonSearch_Click"/>

        <Label x:Name="lblId" Content="ID: " HorizontalAlignment="Left" Margin="64,149,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblIdFoundMember" Content="" HorizontalAlignment="Left" Height="25" Margin="157,149,0,0" VerticalAlignment="Top" Width="50"/>

        <Label x:Name="lblNameFoundMember" Content="" HorizontalAlignment="Left" Height="25" Margin="157,176,0,0" VerticalAlignment="Top" Width="200"/>
        <Label x:Name="lblName" Content="Name:" HorizontalAlignment="Left" Margin="64,176,0,0" VerticalAlignment="Top"/>

        <Label x:Name="lblAddress" Content="Address:" HorizontalAlignment="Left" Margin="64,202,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblAdresFoundMember" Content="" HorizontalAlignment="Left" Height="29" Margin="158,203,0,0" VerticalAlignment="Top" Width="200"/>
        <Label x:Name="lblCount" Content="number of reservations:" HorizontalAlignment="Left" Margin="64,231,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.047,0.334"/>
        <Label x:Name="lblCountReservations" Content="" HorizontalAlignment="Left" Height="29" Margin="211,232,0,0" VerticalAlignment="Top" Width="51"/>
        <Button x:Name="buttonMakeReservation" Content="Make Reservation" HorizontalAlignment="Left" Height="23" Margin="35,266,0,0" VerticalAlignment="Top" Width="380" Click="buttonMakeReservation_Click"/>
    </Grid>
</Window>
