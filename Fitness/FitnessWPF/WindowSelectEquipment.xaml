<Window x:Class="FitnessWPF.WindowSelectEquipment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessWPF"
        mc:Ignorable="d"
        Title="WindowSelectEquipment" Height="450" Width="650">
    <Grid>
        <Label Content="Equipment for the first time slot:" HorizontalAlignment="Left" Height="33" Margin="80,39,0,0" VerticalAlignment="Top" Width="217" FontWeight="Bold"/>
        <Label x:Name="lblEquipment2Header" Content="Equipment for the second time slot:" HorizontalAlignment="Left" Height="33" Margin="366,39,0,0" VerticalAlignment="Top" Width="218" FontWeight="Bold"/>
        <ListBox x:Name="listboxEquipment1" HorizontalAlignment="Left" Height="265" Margin="80,0,0,0" VerticalAlignment="Center" Width="208" d:ItemsSource="{d:SampleData ItemCount=5}" MouseDoubleClick="Equipment1_MouseDoubleClick"/>
        <ListBox x:Name="listboxEquipment2" HorizontalAlignment="Left" Height="265" Margin="373,0,0,0" VerticalAlignment="Center" Width="208" d:ItemsSource="{d:SampleData ItemCount=5}" MouseDoubleClick="Equipment2_MouseDoubleClick"/>
        <Button x:Name="buttonSaveEquipment" Content="Save equipment" HorizontalAlignment="Left" Height="33" Margin="245,372,0,0" VerticalAlignment="Top" Width="152" Click="buttonSaveEquipment_Click"/>

    </Grid>
</Window>
